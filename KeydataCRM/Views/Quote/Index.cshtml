@using EntityLayer.Concrete
@model List<Quote>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_KeydataLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h3>Teklifler</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AÇIKLAMA</th>
        <th>TUTAR</th>
        <th>TARİH</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.QuoteID</td>
            <td>@item.QuoteDesc</td>
            <td>@item.QuotePrice @item.QuoteCurrency</td>
            <td>@item.QuoteDate</td>
            
            <td><a href="#" class="nav-icon fas fa-trash"></a>&nbsp;&nbsp;&nbsp;<a href="#" class="fas fa-pen"></a></td>
        </tr>
    }
</table>
<br />
<a href="/Quote/AddQuote" class="btn btn-success">Yeni Teklif Hazırla</a>

